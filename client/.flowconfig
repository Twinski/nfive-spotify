[ignore]
<PROJECT_ROOT>/build
<PROJECT_ROOT>/docs
<PROJECT_ROOT>/public
<PROJECT_ROOT>/node_modules/polished/.*
<PROJECT_ROOT>/__tests__/.*
<PROJECT_ROOT>/*/.gql
.*/node_modules/json5/.*
.*/node_modules/y18n/test/locales/bad-locale\.json
<PROJECT_ROOT>/.flow-bins-cache/.*
